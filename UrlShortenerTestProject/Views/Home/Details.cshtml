@model UrlShortenerTestProject.Models.ShortenedUrl
@{
    ViewData["Title"] = "Деталі";
}
<div class="container mt-4">
    <h2>Деталі посилання</h2>
    <br>
    <table id="UrlTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center fixed-width">Оригінальне посилання</th>
                <th class="text-center ">Скорочене посилання</th>
                <th class="text-center">Створено</th>
                <th class="text-center ">Створено о</th>
                <th class="text-center ">Кількість переходів</th>
              
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="fixed-width">@Model.OriginalUrl</td>
                <td>
                    <a href="@($"{Context.Request.Scheme}://{Context.Request.Host}/{Model.ShortCode}")" target="_blank">
                        @($"{Context.Request.Scheme}://{Context.Request.Host}/{Model.ShortCode}")
                    </a>
                </td>
                <td>@Model.CreatedBy</td>
                <td>@Model.CreatedAt</td>
                <td>@Model.ClickCount</td>
            </tr>
        </tbody>
    </table>
    <div class="mt-1">
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Table">Повернутись</a>
    </div>
</div>